<?xml version="1.0"?>
<log4net debug="false">

  <appender name="ARILogFileAppender" type="log4net.Appender.RollingFileAppender">
    <!--log file name start with 'ARI-(datetime).log'-->
    <file value="C:\Log\ARI-" />
    <maxSizeRollBackups value="0" />
    <maximumFileSize value="10MB" />
    <immediateFlush value="true" />
    <lockingModel type="log4net.Appender.FileAppender+MinimalLock" />
    <appendToFile value="true" />
    <rollingStyle value="Date" />
    <datePattern value="yyyyMMddHH'.log'" />
    <staticLogFileName value="false" />

    <!--Ignore 'Microsoft.AspNetCore.Diagnostics.ExceptionHandlerMiddleware' type for write log--> 
    <filter type="log4net.Filter.LoggerMatchFilter">
      <loggerToMatch value="Microsoft.AspNetCore.Diagnostics.ExceptionHandlerMiddleware" />
      <acceptOnMatch value="false" />
    </filter>
    
    <!--Log Level--> 
    <filter type="log4net.Filter.LevelRangeFilter">
      <levelMin value="DEBUG" />
      <levelMax value="FATAL" />
      <acceptOnMatch value="true" />
    </filter>
    
    <filter type="log4net.Filter.DenyAllFilter" />
    <!--Set pattern to write log into log file-->
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="%date [%thread] %level [%c] [%m] - %message%newline" />
    </layout>
  </appender>

  <root>
    <level value="ALL" />
    <appender-ref ref="ARILogFileAppender" />
  </root>
</log4net>